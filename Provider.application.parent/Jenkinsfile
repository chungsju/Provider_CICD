pipeline {
    agent any
    tools { 
        // Jenkins 환경설정에서 자동으로 설치한 Maven의 Name
        maven "Maven3"
    }
	stages {
        stage('SCM Check out test') {
            steps {
               sh "ls -al"
            }
        }
        stage('Clean & Package') {
            steps {
                dir("Provider.application.parent") {
               		 sh "mvn clean package"
               	}
            }
        }
        stage('Docker Image Build') {
            steps {
            	 dir("Provider.application.parent") {
               		 sh "mvn package initialize docker:build"
               	}
            }
        }
        stage('Docker Image push') {
            steps {
                 dir("Provider.application.parent") {
               		// setting.xml 환경설정파일 참조 
                 	sh "mvn initialize docker:push -s setting.xml"
               	}
            }
        }
        stage('Kubernetes Resource') {
            steps {
                 dir("Provider.application.parent") { 
                 	sh "mvn initialize com.tibco.plugins:bw6-maven-plugin:bwfabric8json fabric8:resource"
               	} 
            }
        }
        stage('Kubernetes Apply') {
            steps {
                  dir("Provider.application") {
//                 	   sh "mvn  initialize fabric8:apply"
                       sh "git add -f target/classes/META-INF/fabric8/kubernetes/"
                       //sh "git add target/classes/META-INF/fabric8/kubernetes/"
                       sh "git config --global user.email 'chungsju@gmail.com'"
                       sh "git commit -m jenkins_build"
                       withCredentials([usernamePassword(credentialsId: '4172501e-c084-43bf-bff5-0dac2d1077d1', passwordVariable: 'GIT_PASSWORD', usernameVariable: 'GIT_USERNAME')]) {
   
						    sh('git push https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/chungsju/Provider_CICD.git HEAD:master')
						}
                        
                       //sh "git push https://chungsju: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@github.com/chungsju/Provider_CICD.git HEAD:master --set-upstream"
               	}
             
            }
        }
    }
}
